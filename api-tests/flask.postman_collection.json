						"type": "text/javascript",
						"exec": [
							"var jsonData = pm.response.json();",
							"",
							"pm.test(\"Fetched users successfully\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200]);",
							"    pm.response.to.have.status(\"OK\");",
							"    // pm.response.to.have.body(\"success\");",
							"    // pm.response.to.have.body(\"response_body_string\");",
							"    ",
							"    // pm.expect(jsonData.length).to.eql(100);",
							"});",
							"",
							"pm.test(\"Records are present in users list\", function() {",
							"    ",
							"    pm.expect(jsonData.length).to.be.above(3);",
							"    // var jsonData = pm.response.json();",
							"    // pm.expect()",
							"})",
							"",
							"function convert_to_list(name,data) {",
							"    var names=[]",
							"    data.forEach(function(d){",
							"        names.push(d.name)",
							"    })",
							"    return names;",
							"}",
							"",
							"pm.test(\"Verify \" + data[1].name +\" is present from data file\", function() {",
							"    jsonData.forEach(function(user){",
							"        pm.expect(user.name).to.be.oneOf(convert_to_list(\"name\",data[1].name));",
							"        ",
							"        pm.expect(user.email).to.be.oneOf(covert_to_list(\"email\",data[1].email));",
							"    })",
							"    // pm.expect(jsonData.value)",
							"    ",
							"})"
						]
					}
				}
